@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
    TempData["Success"] = null;
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
    TempData["Error"] = null;
}

<form asp-action="List" method="get">
    <div class="input-group mb-3">
        <input type="text" name="searchString" class="form-control" placeholder="Search by author, publisher, or name" value="@ViewData["CurrentFilter"]" />
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

@foreach (var book in Model)
{

    <div class="book-item">
        <h4>@book.Name</h4>
        <p>@book.Author</p>
        <p>@book.Publisher</p>
        <p>@book.DateOfPublication?.ToShortDateString()</p>
        <p>@book.Price</p>


        @if (ViewBag.IsUserLoggedIn != null && ViewBag.IsUserLoggedIn)
        {
            if (book.IsReserved)
            {
                <span class="text-danger">Reserved</span>
            }
            else if(book.IsLeased)
            {
                <span class="text-danger">Leased</span>
            }
            else
            {
                <form method="post" action="@Url.Action("ReserveBook", "Books")">
                    <input type="hidden" name="bookId" value="@book.BookId" />
                    <button type="submit" class="btn btn-success">Reserve</button>
                </form>
            }
        }
        else
        {
            <p>Login to reserve this book.</p>
        }
    </div>
}
